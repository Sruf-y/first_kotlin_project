<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">



    <!-- ON PRESS -->
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:endColor="@color/gray"
                android:startColor="@color/gray_light"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/gray_dark" />

            <corners
                android:topLeftRadius="15dp"
                android:bottomLeftRadius="15dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>


    <item>
        <shape>
            <gradient
                android:endColor="@color/gray"
                android:startColor="@color/white"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/gray" />

            <corners
                android:topLeftRadius="15dp"
                android:bottomLeftRadius="15dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

</selector>