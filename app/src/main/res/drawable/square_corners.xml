        <shape>
            <gradient
                android:endColor="@color/black"
                android:startColor="@color/gray_light"
                android:angle="270" />




        </shape>
    </item>


    <item>
        <shape>
            <gradient
                android:endColor="@color/black"
                android:startColor="@color/white"
                android:angle="270" />



        </shape>
    </item>

</selector>